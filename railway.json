{
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "npm install",
      "watchPatterns": [
        "**/*.js",
        "**/*.json",
        "package*.json"
      ]
    },
    "deploy": {
      "startCommand": "npm start",
      "healthcheckPath": "/api/health",
      "healthcheckTimeout": 100,
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    },
    "environments": {
      "production": {
        "variables": {
          "NODE_ENV": "production"
        }
      }
    }
  }
  